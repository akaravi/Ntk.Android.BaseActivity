<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/answerLin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_send_message"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:id="@+id/lblTypeRecyclerTicketAnswer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"

            android:text="seda seda seda seas sadwdasd w asd adw adwd aw seda seda seas sadwdasd w asd adw adwd aw seda seda seas sadwdasd w asd adw adwd aw"

            android:textColor="?colorTextSecondary"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblDateRecyclerTicketAnswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="2017/08/24 14:25 -"
                android:textSize="9sp"
                tools:ignore="HardcodedText" />

        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/answerAttaches"
        android:layout_width="34dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"

        android:layout_marginLeft="16dp"
        android:padding="5dp"
        android:src="@drawable/ic_attach"
        app:tint="?attr/colorAccent" />


</LinearLayout>