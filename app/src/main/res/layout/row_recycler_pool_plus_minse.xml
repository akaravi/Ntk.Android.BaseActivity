<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgPlusRecyclerPoolPlus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_plus_pool"
        app:tint="?colorAccent"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/lblRecyclerPoolPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/imgPlusRecyclerPoolPlus"
        android:text="0"
        android:textColor="?colorTextSecondary"
        android:textSize="17sp"
        android:layout_toLeftOf="@id/imgPlusRecyclerPoolPlus" />

    <ImageView
        android:id="@+id/imgMinusRecyclerPoolPlus"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="16dp"
        android:layout_toStartOf="@id/lblRecyclerPoolPlus"
        android:contentDescription="@null"
        android:src="@drawable/ic_minus_pool"
        android:layout_toLeftOf="@id/lblRecyclerPoolPlus"
        app:tint="?colorAccent" />

    <TextView
        android:id="@+id/lblTitleRecyclerPoolPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/imgMinusRecyclerPoolPlus"
        android:text="0"
        android:textColor="?colorTextSecondary"
        android:textSize="17sp"
        android:layout_toLeftOf="@id/imgMinusRecyclerPoolPlus" />
</RelativeLayout>